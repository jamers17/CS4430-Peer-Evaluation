<%= form_tag do %>
    <fieldset>
        <legend>Please Log In</legend>
        <div class="field">
            <%= label_tag :email, 'Email:' %>
            <%= text_field_tag :email, params[:email] %>
        </div>
        <div class="field">
            <%= label_tag :password, 'Password:' %>
            <%= password_field_tag :password, params[:password] %>
        </div>
        <div class="field">
            <%= submit_tag "Login", class: 'button small radius' %>
          <%= link_to "New Student", new_member_path, class: 'button small secondary radius' %>

        </div>
    </fieldset>
<% end %>

<br />

