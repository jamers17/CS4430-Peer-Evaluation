


<h1>Members</h1>

<table>
  <thead>
    <tr>
      <th>Email</th>
      <th>First</th>
      <th>Last</th>
      <th>Teacher</th>
      <th colspan="3">Admin</th>
    </tr>
  </thead>

  <tbody>

    <% @members.each do |member| %>
      <tr>
        <td><%= member.email %></td>
        <td><%= member.first %></td>
        <td><%= member.last %></td>
        <td><%= member.teacher %></td>
        <td><%= link_to 'Show', member %></td>
        <td><%= link_to 'Edit', edit_member_path(member) %></td>
        <td><%= link_to 'Destroy', member, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>

  </tbody>
</table>

<br>
<%= link_to 'New Member', new_member_path, class: 'button small radius secondary' %>


