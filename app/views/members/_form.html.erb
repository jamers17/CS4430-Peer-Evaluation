<%= form_for(@member) do |f| %>
    <% if @member.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@member.errors.count, "error") %> prohibited this member from being saved:</h2>

          <ul>
            <% @member.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>
    <fieldset>
      <legend>Enter Student Details</legend>

      <div class="field">
        <%= f.label :email %><br>
        <%= f.text_field :email %>
      </div>
      <div class="field">
        <%= f.label :password %><br>
        <%= f.password_field :password %>
      </div>
      <div class="field">
        <%= f.label :password_confirmation %><br>
        <%= f.password_field :password_confirmation %>
      </div>
      <div class="field">
        <%= f.label :first %><br>
        <%= f.text_field :first %>
      </div>
      <div class="field">
        <%= f.label :last %><br>
        <%= f.text_field :last %>
      </div>
      <%= f.hidden_field :teacher, :value => false %>
      <div class="actions">
        <%= f.submit "Register", class: 'button small radius' %>
      </div>
    </fieldset>
<% end %>
