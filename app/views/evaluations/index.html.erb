
<% if current_member.teacher %>
    <h1>All Evaluations</h1>
<% else %>
    <h1>Your Evaluations</h1>
<% end %>

<table>
  <thead>
    <tr>
      <th>Evaluator email</th>
      <th>Evaluatee email</th>
      <th>Assignment</th>
      <th>Project</th>
      <th>Question1</th>
      <th>Question2</th>
      <th>Question3</th>
      <th>Question4</th>
      <th>Question5</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  <% if current_member.teacher %>
    <% @evaluations.each do |evaluation| %>
    <tr>
        <td><%= evaluation.evaluator_email %></td>
        <td><%= evaluation.evaluatee_email %></td>
        <td><%= evaluation.assignment_id %></td>
        <td><%= evaluation.project %></td>
        <td><%= evaluation.question1 %></td>
        <td><%= evaluation.question2 %></td>
        <td><%= evaluation.question3 %></td>
        <td><%= evaluation.question4 %></td>
        <td><%= evaluation.question5 %></td>
        <td><%= link_to 'Show', evaluation %></td>
      </tr>
    <% end %>
  <% end %>

  <% if !current_member.teacher %>
    <% team_evaluations(current_member).each do |evaluation| %>
      <tr>
        <td><%= evaluation.evaluator_email %></td>
        <td><%= evaluation.evaluatee_email %></td>
        <td><%= evaluation.assignment_id %></td>
        <td><%= evaluation.project %></td>
        <td><%= evaluation.question1 %></td>
        <td><%= evaluation.question2 %></td>
        <td><%= evaluation.question3 %></td>
        <td><%= evaluation.question4 %></td>
        <td><%= evaluation.question5 %></td>
        <td><%= link_to 'Show', evaluation %></td>
        <td><%= link_to 'Edit', edit_evaluation_path(evaluation) %></td>
        <td><%= link_to 'Destroy', evaluation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  <% end %>  
  </tbody>
</table>

<br>

